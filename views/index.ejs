<%- include("partials/header.ejs") %>

<div class="container py-5">
  <div class="text-center mb-5">
    <h1 class="display-4 fw-bold text-primary">Welcome to My Blog</h1>
    <p class="lead text-muted">Discover stories, thinking, and expertise from writers on any topic.</p>
  </div>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% posts.forEach((post) => { %>
      <div class="col">
        <div class="card h-100 shadow-sm hover-card">
          <div class="card-body">
            <h2 class="card-title h4 mb-3">
              <a href="/post/<%= post.id %>" class="text-decoration-none text-dark">
                <%= post.title %>
              </a>
            </h2>
            <p class="card-text text-muted"><%= post.description %></p>
          </div>
          <div class="card-footer bg-white border-top-0 d-flex justify-content-between align-items-center">
            <a href="/post/<%= post.id %>" class="btn btn-outline-primary btn-sm">Read More</a>
            <a href="/delete/<%= post.id %>" class="btn btn-outline-danger btn-sm" 
               onclick="return confirm('Are you sure you want to delete this post?')">
              Delete
            </a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

  <% if (posts.length === 0) { %>
    <div class="text-center mt-5">
      <h3 class="text-muted">No posts yet</h3>
      <p class="lead">Be the first to share your story!</p>
      <a href="/new" class="btn btn-primary">Create New Post</a>
    </div>
  <% } %>
</div>

<style>
  .hover-card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
  }
  
  .hover-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 15px rgba(0,0,0,0.1) !important;
  }

  .card-title a:hover {
    color: #0984e3 !important;
  }

  .btn-outline-primary {
    border-color: #0984e3;
    color: #0984e3;
  }

  .btn-outline-primary:hover {
    background-color: #0984e3;
    color: white;
  }

  .btn-outline-danger {
    border-color: #e74c3c;
    color: #e74c3c;
  }

  .btn-outline-danger:hover {
    background-color: #e74c3c;
    color: white;
  }
</style>

<%- include("partials/footer.ejs") %>